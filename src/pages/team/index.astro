---
import PageLayout from "../../layouts/PageLayout.astro";
import { Boxes } from "../../components/ui/background-boxes";
import TeamSection from "../../components/team/TeamSection.astro";
import { Image } from "astro:assets";
import { mentors, heads, cores, uiux, heads_last, cores_last, uiux_last } from "./data";
import TopLayout from "@layouts/TopLayout.astro";
---

<PageLayout
  title="Our Team | Lambda Dev Club"
  description="Meet the amazing team behind Lambda Dev Club at IIT Hyderabad"
>
  {/* Navbar Background Overlay */}
  <div
    class="fixed top-0 left-0 right-0 h-20 bg-gradient-to-b from-gray-50/80 to-gray-50/0 dark:from-black/80 dark:to-black/0 backdrop-blur-md z-40"
  >
  </div>
  <div
    class="relative min-h-screen bg-gradient-to-b from-purple-50 to-white dark:from-purple-950 dark:to-black"
  >
    {/* Purple glow effects */}
    <div
      class="absolute inset-0 bg-gradient-to-tr from-purple-500/5 via-transparent to-purple-500/5 dark:from-purple-900/20 dark:via-transparent dark:to-purple-900/20 pointer-events-none"
    >
    </div>

    {/* Subtle grid pattern */}
    <div
      class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))] dark:bg-[url('/grid-dark.svg')] pointer-events-none opacity-50"
    >
    </div>

    <div
      class="relative min-h-screen bg-gradient-to-b from-gray-50 via-purple-50/50 to-white dark:from-black dark:via-black dark:to-black overflow-hidden pt-20"
    >
      <div class="absolute inset-0 pt-20">
        <div class="absolute inset-0 opacity-20 dark:opacity-30">
          <Boxes client:load />
        </div>
        <div
          class="absolute inset-0 bg-gradient-to-b from-gray-50/80 via-white/50 to-white/80 dark:from-black dark:via-transparent dark:to-black"
        >
        </div>
        <div
          class="absolute inset-0 bg-white/40 dark:bg-transparent backdrop-blur-[2px]"
        >
        </div>
      </div>

      <div class="relative z-10 max-w-7xl mx-auto py-8 sm:py-16">
        <div class="text-center mb-12 sm:mb-20 px-4">
          <h1 class="text-4xl sm:text-7xl font-black animate-title">
            <span
              class="bg-clip-text text-transparent bg-gradient-to-r from-purple-700 via-pink-600 to-purple-700 dark:from-purple-500 dark:via-pink-400 dark:to-purple-500 animate-shimmer inline-block"
            >
              Our Team
            </span>
          </h1>
        </div>

        <div class="flex justify-center mb-8 px-4">
          <label for="team-era-select" class="sr-only">Select team era</label>
          <select
            id="team-era-select"
            class="rounded-full bg-white/80 dark:bg-gray-900/80 border border-gray-200 dark:border-gray-800 py-2 px-4 text-sm shadow-sm"
            aria-label="Select current or previous team"
          >
            <option value="current">Team 2025-26</option>
            <option value="previous">Team 2024-25</option>
          </select>
        </div>

        <div class="space-y-16">
          <div class="team-era" data-era="current">
            {mentors.length > 0 && (
              <TeamSection
                title="Mentors"
                members={mentors}
                columns="grid-cols-1 md:grid-cols-2"
              />
            )}

            <TeamSection
              title="Club Heads"
              members={heads}
              columns="grid-cols-1 md:grid-cols-2"
              isHeadSection={true}
              isPriority={true}
            />

            <TeamSection title="Core Members" members={cores} />

            {
              uiux.length > 0 && (
                <TeamSection
                  title="UI/UX Team"
                  members={uiux}
                  columns="grid-cols-1 md:grid-cols-3"
                />
              )
            }
          </div>

          <div class="team-era hidden" data-era="last">
            <TeamSection
              title="Club Heads"
              members={heads_last}
              columns="grid-cols-1 md:grid-cols-2"
              isHeadSection={true}
              isPriority={true}
            />

            <TeamSection title="Core Members" members={cores_last} />

            {
              uiux_last.length > 0 && (
                <TeamSection
                  title="UI/UX Team"
                  members={uiux_last}
                  columns="grid-cols-1 md:grid-cols-3"
                />
              )
            }
          </div>
        </div>

        <script>
          (function () {
            const select = document.getElementById("team-era-select");
            const current = document.querySelector('.team-era[data-era="current"]');
            const last = document.querySelector('.team-era[data-era="last"]');
            if (!select || !current || !last) return;
            select.addEventListener("change", (e) => {
              const v = e.target.value;
              if (v === "previous") {
                current.classList.add("hidden");
                last.classList.remove("hidden");
              } else {
                last.classList.add("hidden");
                current.classList.remove("hidden");
              }
            });
          })();
        </script>
      </div>
    </div>
  </div>

  <style>
    /* Custom scrollbar */
    ::-webkit-scrollbar {
      width: 8px;
    }

    ::-webkit-scrollbar-track {
      background: theme(colors.gray.50);
      @media (prefers-color-scheme: dark) {
        background: #000000;
      }
    }

    ::-webkit-scrollbar-thumb {
      background: theme(colors.purple.200);
      border-radius: 4px;
      @media (prefers-color-scheme: dark) {
        background: #4c1d95;
      }
    }

    ::-webkit-scrollbar-thumb:hover {
      background: theme(colors.purple.300);
      @media (prefers-color-scheme: dark) {
        background: #6d28d9;
      }
    }

    /* Prevent background boxes from causing horizontal scroll */
    body {
      overflow-x: hidden;
    }

    @keyframes title {
      0% {
        opacity: 0;
        transform: translateY(-20px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-title {
      animation: title 1s ease-out forwards;
    }

    /* Add smooth scroll behavior */
    html {
      scroll-behavior: smooth;
    }

    /* Improve navbar transition */
    .fixed {
      transition: background-color 0.3s ease-in-out;
    }
  </style>
</PageLayout>
